 <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%=image_tag portfolio_item.thumb_image.url unless portfolio_item.thumb_image.nil?%>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle%>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <small class="text-muted">9 mins</small>
      </div>
    </div>
</div>
